doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Second Express application
        style.
            table {
                width: 100%;
            }
            td {
                border: 1px solid #000; 
                padding: 15px;
                text-align: left;
            }
            th {
                background-color: #04AA6D;
                color: white;
            }
    body
        main
            h1 Second Express application
            table
                tr
                    th GET
                    th POST
                tr 
                    td 
                        form(method='GET' action='/submit')
                            label(for='name') Give your name
                            input(name='name')
                            br
                            input(type='submit')
                            input(type='reset')
                        img(src="images/image.png" style="margin:8px; width:80%")
                    td 
                        form(method='POST' action='/')
                            label(for='name') Give your name
                            input(name='name')
                            br
                            input(type='submit')
                            input(type='reset')
                        img(src="images/image.png" style="margin:8px; width:80%")
            hr
            table 
                if students.length > 0 
                    if students[0].faculty === undefined
                        tr 
                            td(style="font-weight:bold; width:65%") Nazwisko
                            td(style="font-weight:bold; width:35%") Imię
                        each student in students 
                            tr 
                                td(style="width:65%") #{student.lname}
                                td(style="width:35%") #{student.fname}
                    else 
                        tr 
                            td(style="font-weight:bold; width:40%") Nazwisko
                            td(style="font-weight:bold; width:25%") Imię
                            td(style="font-weight:bold; width:35%") Wydział
                        each student in students 
                            tr 
                                td(style="width:40%") #{student.lname}
                                td(style="width:25%") #{student.fname}
                                td(style="width:35%") #{student.faculty}
